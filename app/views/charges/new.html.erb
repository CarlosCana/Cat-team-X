<!-- Preloader-->
<%= render 'shared/preloader' %>
<!-- Preloader end-->

<!-- Header-->
<%= render 'shared/header' %>
<!-- Header end-->

<!-- Wrapper-->
<div class="wrapper">
    <section class="module-cover parallax fullscreen text-center" id="global-background" data-overlay="0.65" data-gradient="">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 m-auto">
                    <div class="m-b-20">
                        <div class="form-group">
                          <h4> Payment</h4>
                            <%= form_tag charges_path do %>
                              <article>
                                <% if flash[:error].present? %>
                                  <div id="error_explanation">
                                    <p><%= flash[:error] %></p>
                                  </div>
                                <% end %>
                                <label class="amount">
                                  <span>Amount: <%= number_to_currency(@current_cart.sub_total) %></span>
                                </label>
                              </article>

                              <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                                      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                                      data-description="Paiement des photos"
                                      data-amount="<%= number_to_currency(@current_cart.sub_total) %>"
                                      data-currency="usd"
                                      data-locale="auto"></script>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer-->
    <%= render 'shared/footer' %>
    <!-- Footer end-->
</div>
<!-- Wrapper end-->

