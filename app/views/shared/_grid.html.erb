
<section class="module">
    <div class="container">
        <div class="row">
            <% @items.each do |item| %>
            <div class="col-md-4">
                <div class="shop-grid-item">
                    <div class="shop-item-thumb"><%= link_to item.image_url, "/items/"+item.id.to_s %>
                        <!-- <div class="shop-item-hidden"><a class="btn btn-new-white" href="#">Add to cart</a></div> -->
                    </div>
                    <div class="shop-item-captions">
                        <h6 class="shop-item-title"><%= item.title %></h6>
                    </div>
                </div>
            </div>
            <% end %>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="space" data-MY="40px"></div>
            </div>
        </div>
    </div>
</section>
