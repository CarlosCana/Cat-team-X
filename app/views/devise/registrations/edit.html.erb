<!-- Preloader-->
<%= render 'shared/preloader' %>
<!-- Preloader end-->

<!-- Header-->
<%= render 'shared/header' %>
<!-- Header end-->

<!-- Wrapper-->
<div class="wrapper">
  <!-- Form to Edit-user section -->
  <section class="module-cover parallax fullscreen text-center" id="global-background" data-overlay="0.65" data-gradient="">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 m-auto">
                    <div class="m-b-20">
                      <h4>Edit <%= resource_name.to_s.humanize %></h4>
                    </div>
                    <div class="m-b-20">
                          <!-- Edit-user form -->
                          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                            <%= devise_error_messages! %>
                            <div class="form-group">
                                <%= f.text_field :username, placeholder:'Name', :class => "form-control" %>
                            </div>
                            <div class="form-group">
                                <%= f.text_field :email,autofocus: true, autocomplete: "email", placeholder:'Email', :class => "form-control"  %>
                            </div>
                            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                            <% end %>
                            <div  class="form-group" style="font-wight:ultra-light"   >
                                <%=  f.password_field :password, placeholder:"New password", autocomplete: "new-password", :class => "form-control" %>
                            </div>

                            <div class="form-group">
                                <%= f.password_field :password_confirmation, placeholder: 'Password confirmation', autocomplete: "new-password", :class => "form-control" %>
                            </div>

                            <div class="form-group">
                                <%= f.password_field :current_password, placeholder: 'Current password (to confirme changes)', autocomplete: "current-password", :class => "form-control" %>
                            </div>

                            <div class="form-group">
                                <%= f.submit 'Update', :class => 'btn btn-block btn-round btn-brand'%>
                            </div>

                            <% end %> <!-- Sign up form end -->


                            <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
                            <%= link_to "Back", :back %>
                    </div>

                </div>
            </div>
        </div>
    </section>
    <!--Form to sign up section end -->

    <!-- Footer-->
    <%= render 'shared/footer' %>
    <!-- Footer end-->
</div>
<!-- Wrapper end-->

<!-- To top button--><a class="scroll-top" href="#top"><i class="fas fa-angle-up"></i></a>
